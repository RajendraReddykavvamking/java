import java.util.Scanner;
public class Fence
{
    public static void main(String args[])
    {
     Scanner sc= new Scanner(System.in);
     int a=sc.nextInt();
     int b=sc.nextInt();
     int c=a+b;
     int e=c*2;
     int d=a*b;
     System.out.printf("Required length is %d m\n",e);
     System.out.printf("Required quantity of carpet is %d sqm",d);
    }
}
